<h1>ユーザー情報</h1>
名前


<p><%= @user.name %></p>
出身地
<p><%= @user.birthplace %></p>
性別
<p><%= @user.sex %></p>
年齢
<p><%= @user.age %></p>



<ul>
    <li>
      <%= link_to likes_user_path(@user) do %>
        <div class="text">投稿数</div>
        <div class="num"><%= @user.articles.count %></div>
      <% end %>
    </li>
    <li>
      <%= link_to likes_user_path(@user) do %>
        <div class="text">いいね一覧</div>
        <div class="num"><%= @user.likes.count %></div>
      <% end %>     
    </li>
</ul>


<% @user.articles.each do |article| %>
    <h4 class="user">
        <span class="user-name">
          <%= link_to article.user.email, user_path(article.user) %>
        </span>
    <span class="user-id"><%= article.user.email %></span>
    </h4>
    <div class= "article-content">
        <%= article.content %>
    </div>  
<% end %>



<%= link_to "ユーザー一覧", users_path %>
<%= link_to "編集", edit_user_path(@user.id) %>
<%= link_to "削除", user_path(@user.id), method: :delete, "data-comfirum" => "本当に削除しますか？" %>


<%= link_to "投稿一覧", root_path %>