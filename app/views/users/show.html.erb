<h1 class="top">ユーザー情報</h1>

<div class="container">
  <div class="col-md-1 col-xs-0"></div>
  <div class="col-md-10 col-xs-12">

    <div class="row">
        <div class="col-md-3">
          <div class="page4">
            <h3 class="title">名前</h3>
            <p class="word"><%= @user.name %></p>
          </div>
        </div>

        <div class="col-md-3">
          <div class="page4">
            <h3 class="title">出身地</h3>
            <p class="word"><%= @user.birthplace %></p>
          </div>
        </div>

        <div class="col-md-3">
          <div class="page4">
            <h3 class="title">性別</h3>
            <p class="word"><%= @user.sex %></p>
          </div>
        </div>

        <div class="col-md-3">
          <div class="page4">
            <h3 class="title">年齢</h3>
            <p class="word"><%= @user.age %></p>
          </div>
        </div>
    </div>

    <% if current_user.id == @user.id %>
      <%= link_to "編集", edit_user_path(current_user.id) %>
      <%= link_to "削除", user_path(current_user.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    <% end %>



    <h3>
      <%= link_to 'いいねした項目',likes_user_path(@user) %>
        <!-- <div class="text">いいね一覧<%= @user.likes.count %></div> -->
        <!-- <div class="num"><%= @user.likes.count %></div> -->
    </h3>



    <h2>投稿一覧<%= @user.articles.count %></h2>
          <!-- <div class="text">投稿数<%= @user.articles.count %></div> -->
          <!-- <div class="num"><%= @user.articles.count %></div> -->


    <div class="user-article-index">
        <% @user.articles.each do |article| %>

            <div class="col-md-4">
                <div class="posting">
                    <div class="article-title">
                      <%= article.title %>
                    </div>

                    <div class= "article-content">
                        <%= article.content %>
                    </div> 

                    <div class="article-hobby">
                        #<%= article.hobby %>
                    </div>

                    <div class="user-article-img">
                      <%= image_tag article.img %>
                    </div>
              </div>
          </div>
        <% end %>
    </div>



    <div class="following">
      <%= link_to follows_user_path(@user) do %>
        <div class="text">フォロー<%= @user.followings.count %></div>
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
      <% end %>
    </div>

    <div class="follower">
      <%= link_to followers_user_path(@user) do %>
        <div class="text">フォロワー<%= @user.followers.count %></div>
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
      <% end %>
    </div>


  </div>

  <div class="col-md-1 col-xs-0"></div>

</div>


